@{
    ViewData["Title"] = "HTML Extraction Demo";
}

<div class="container">
    <h1 class="mb-4">HTML Extraction Demo</h1>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h3>Slurper HTML Extraction</h3>
        </div>
        <div class="card-body">
            <p class="lead">This demo demonstrates extracting book data from an HTML file using WebSpark.Slurper's HTML
                extractor.</p>

            @if (ViewBag.RawHtmlContent != null)
            {
                <div class="mb-3">
                    <h6>Raw HTML Content Being Processed:</h6>
                    <details>
                        <summary class="btn btn-outline-secondary btn-sm">Show/Hide Raw HTML</summary>
                        <pre class="bg-light p-3 mt-2"
                            style="font-size: 0.8em; max-height: 300px; overflow-y: auto; border: 1px solid #ddd; border-radius: 4px;"><code>@ViewBag.RawHtmlContent</code></pre>
                    </details>
                </div>
            }

            @if (ViewBag.Success)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>

                <h4 class="mt-4">Book List</h4>
                <div class="row">
                    @foreach (var book in ViewBag.BookList)
                    {
                        <div class="col-md-6">
                            <partial name="_BookDisplay" model="book" />
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>

    <div class="text-center">
        <a asp-action="Index" class="btn btn-primary">Back to Demo List</a>
    </div>
</div>
