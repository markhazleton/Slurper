@{
    ViewData["Title"] = "🕵️ Slurper Detective Agency";
}

<style>
    .detective-badge {
        background: linear-gradient(45deg, #ff6b6b, #4ecdc4);
        border-radius: 20px;
        padding: 10px 20px;
        color: white;
        font-weight: bold;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
    }
    
    .case-file {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-left: 5px solid transparent;
    }
    
    .case-file:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        border-left-color: #ff6b6b;
    }
    
    .evidence-icon {
        font-size: 2em;
        margin-right: 15px;
        filter: drop-shadow(2px 2px 4px rgba(0,0,0,0.2));
    }
    
    .slurp-animation {
        animation: slurp 2s ease-in-out infinite;
    }
    
    @@keyframes slurp {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }
    
    .agency-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px 0;
        margin: -20px -15px 30px -15px;
        clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
    }
    
    .special-mission {
        background: linear-gradient(135deg, #ff6b6b, #feca57);
        border: none;
        position: relative;
        overflow: hidden;
    }
    
    .special-mission::before {
        content: '⭐ SPECIAL MISSION ⭐';
        position: absolute;
        top: 10px;
        right: -30px;
        background: rgba(255,255,255,0.9);
        color: #333;
        padding: 5px 40px;
        font-size: 0.8em;
        font-weight: bold;
        transform: rotate(15deg);
    }
</style>

<div class="agency-header text-center">
    <h1 class="display-3">🕵️‍♀️ Slurper Detective Agency 🕵️‍♂️</h1>
    <p class="lead fs-4">
        <span class="detective-badge">
            🔍 Solving Data Mysteries Since 2024 🔍
        </span>
    </p>
    <p class="mt-3">Welcome, Detective! Your mission: Extract valuable intelligence from various data formats using the powerful Slurper toolkit.</p>
</div>

<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <!-- Special Mission Card -->
        <div class="card shadow-lg mb-4 special-mission">
            <div class="card-body text-center text-white p-4">
                <h3>🦸‍♂️ CLASSIFIED: Superhero Database 🦸‍♀️</h3>
                <p class="lead">New mission available! Access the secret superhero database using advanced Slurper technology.</p>
                <a asp-controller="Superhero" asp-action="Index" class="btn btn-light btn-lg">
                    🚀 Launch Superhero Mission
                </a>
            </div>
        </div>
        
        <div class="card shadow-lg">
            <div class="card-header bg-dark text-white text-center">
                <h3>🗂️ Active Case Files 📋</h3>
                <small>Choose your investigation method</small>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    <a asp-action="XmlDemo" class="list-group-item list-group-item-action case-file p-4">
                        <div class="d-flex align-items-center">
                            <span class="evidence-icon">📄</span>
                            <div class="flex-grow-1">
                                <h5 class="mb-2">🔍 Case #001: The XML Archives</h5>
                                <p class="mb-1 text-muted">
                                    <strong>Evidence Type:</strong> Ancient XML scrolls containing mysterious book catalog data
                                </p>
                                <small class="text-success">
                                    <i class="fas fa-clock"></i> Difficulty: Beginner Detective
                                </small>
                            </div>
                            <span class="badge bg-primary rounded-pill">XML</span>
                        </div>
                    </a>
                    
                    <a asp-controller="JSON" asp-action="Index" class="list-group-item list-group-item-action case-file p-4">
                        <div class="d-flex align-items-center">
                            <span class="evidence-icon">🧩</span>
                            <div class="flex-grow-1">
                                <h5 class="mb-2">🔎 Case #002: The JSON Enigma</h5>
                                <p class="mb-1 text-muted">
                                    <strong>Evidence Type:</strong> Encrypted JSON intelligence files with nested secrets
                                </p>
                                <small class="text-warning">
                                    <i class="fas fa-star"></i> Special Feature: Before & After Analysis
                                </small>
                            </div>
                            <span class="badge bg-success rounded-pill">JSON</span>
                        </div>
                    </a>
                    
                    <a asp-action="CsvDemo" class="list-group-item list-group-item-action case-file p-4">
                        <div class="d-flex align-items-center">
                            <span class="evidence-icon">📊</span>
                            <div class="flex-grow-1">
                                <h5 class="mb-2">📈 Case #003: The Spreadsheet Caper</h5>
                                <p class="mb-1 text-muted">
                                    <strong>Evidence Type:</strong> Tabular CSV evidence from the crime scene database
                                </p>
                                <small class="text-info">
                                    <i class="fas fa-table"></i> Specialty: Structured Data Analysis
                                </small>
                            </div>
                            <span class="badge bg-info rounded-pill">CSV</span>
                        </div>
                    </a>
                    
                    <a asp-action="HtmlDemo" class="list-group-item list-group-item-action case-file p-4">
                        <div class="d-flex align-items-center">
                            <span class="evidence-icon">🌐</span>
                            <div class="flex-grow-1">
                                <h5 class="mb-2">🕸️ Case #004: The Web Page Mystery</h5>
                                <p class="mb-1 text-muted">
                                    <strong>Evidence Type:</strong> HTML documents with hidden clues buried in markup
                                </p>
                                <small class="text-danger">
                                    <i class="fas fa-exclamation-triangle"></i> Difficulty: Expert Detective
                                </small>
                            </div>
                            <span class="badge bg-warning rounded-pill">HTML</span>
                        </div>
                    </a>
                    
                    <a asp-action="LegacyDemo" class="list-group-item list-group-item-action case-file p-4">
                        <div class="d-flex align-items-center">
                            <span class="evidence-icon">🏛️</span>
                            <div class="flex-grow-1">
                                <h5 class="mb-2">📜 Case #005: The Legacy Files</h5>
                                <p class="mb-1 text-muted">
                                    <strong>Evidence Type:</strong> Cold case files using old-school static investigation methods
                                </p>
                                <small class="text-secondary">
                                    <i class="fas fa-history"></i> Historical Methods: XmlSlurper & JsonSlurper
                                </small>
                            </div>
                            <span class="badge bg-secondary rounded-pill">LEGACY</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="text-center mt-4">
            <div class="card bg-light border-0">
                <div class="card-body">
                    <h4 class="text-muted mb-3">🎯 Your Detective Toolkit</h4>
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <span class="slurp-animation d-inline-block">🔧</span>
                            <small class="d-block">Universal Extractor</small>
                        </div>
                        <div class="col-md-3 mb-2">
                            <span class="slurp-animation d-inline-block">⚡</span>
                            <small class="d-block">Lightning Fast</small>
                        </div>
                        <div class="col-md-3 mb-2">
                            <span class="slurp-animation d-inline-block">🎯</span>
                            <small class="d-block">Precise Targeting</small>
                        </div>
                        <div class="col-md-3 mb-2">
                            <span class="slurp-animation d-inline-block">🛡️</span>
                            <small class="d-block">Error Resistant</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Add some interactive effects
    document.querySelectorAll('.case-file').forEach(function(caseFile) {
        caseFile.addEventListener('mouseenter', function() {
            this.style.backgroundColor = '#f8f9fa';
        });
        
        caseFile.addEventListener('mouseleave', function() {
            this.style.backgroundColor = '';
        });
    });
</script>
