@{
    var achievements = new List<dynamic>
    {
        new { 
            icon = "??", 
            title = "Data Detective", 
            description = "Successfully extracted data from your first format",
            unlocked = true
        },
        new { 
            icon = "??", 
            title = "Format Explorer", 
            description = "Tried multiple data extraction formats",
            unlocked = true
        },
        new { 
            icon = "?????", 
            title = "Superhero Analyst", 
            description = "Accessed the classified superhero database",
            unlocked = ViewContext.RouteData.Values["controller"]?.ToString() == "Superhero"
        },
        new { 
            icon = "??", 
            title = "JSON Master", 
            description = "Decoded complex JSON intelligence files",
            unlocked = ViewContext.RouteData.Values["controller"]?.ToString() == "JSON"
        },
        new { 
            icon = "??", 
            title = "XML Archaeologist", 
            description = "Excavated data from ancient XML scrolls",
            unlocked = ViewContext.RouteData.Values["action"]?.ToString() == "XmlDemo"
        },
        new { 
            icon = "??", 
            title = "CSV Analyst", 
            description = "Analyzed structured tabular data",
            unlocked = ViewContext.RouteData.Values["action"]?.ToString() == "CsvDemo"
        },
        new { 
            icon = "??", 
            title = "Web Crawler", 
            description = "Extracted secrets from HTML documents",
            unlocked = ViewContext.RouteData.Values["action"]?.ToString() == "HtmlDemo"
        },
        new { 
            icon = "???", 
            title = "Legacy Expert", 
            description = "Mastered the ancient static methods",
            unlocked = ViewContext.RouteData.Values["action"]?.ToString() == "LegacyDemo"
        }
    };
}

<style>
    .achievement-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        padding: 8px 15px;
        margin: 5px;
        display: inline-block;
        color: white;
        font-size: 0.85em;
        font-weight: bold;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        transition: all 0.3s ease;
        border: 2px solid rgba(255,255,255,0.2);
    }
    
    .achievement-unlocked {
        background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
        transform: scale(1.05);
        box-shadow: 0 6px 20px rgba(255,107,107,0.3);
        animation: unlock-glow 2s ease-in-out infinite alternate;
    }
    
    .achievement-locked {
        background: linear-gradient(135deg, #95a5a6 0%, #7f8c8d 100%);
        opacity: 0.6;
    }
    
    @@keyframes unlock-glow {
        0% { box-shadow: 0 6px 20px rgba(255,107,107,0.3); }
        100% { box-shadow: 0 8px 25px rgba(255,107,107,0.5); }
    }
    
    .achievements-container {
        background: rgba(255,255,255,0.95);
        border-radius: 15px;
        padding: 15px;
        margin: 15px 0;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
</style>

<div class="achievements-container text-center">
    <h6 class="mb-3">?? Detective Achievements</h6>
    <div>
        @foreach (var achievement in achievements)
        {
            <span class="achievement-badge @(achievement.unlocked ? "achievement-unlocked" : "achievement-locked")" 
                  title="@achievement.title: @achievement.description">
                @achievement.icon @achievement.title
            </span>
        }
    </div>
    <small class="text-muted d-block mt-2">
        Unlocked: @achievements.Count(a => a.unlocked) / @achievements.Count() achievements
    </small>
</div>