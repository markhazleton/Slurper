@model dynamic

<style>
    .superhero-card {
        background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
        border-radius: 15px;
        margin-bottom: 15px;
        padding: 20px;
        border: none;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    
    .superhero-card:hover {
        transform: translateY(-5px) rotateY(2deg);
        box-shadow: 0 15px 35px rgba(0,0,0,0.2);
    }
    
    .superhero-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #ff6b6b, #4ecdc4, #45b7d1, #96c93d);
    }
    
    .power-badge {
        background: linear-gradient(45deg, #ff6b6b, #feca57);
        border-radius: 15px;
        padding: 4px 12px;
        margin: 2px;
        display: inline-block;
        color: white;
        font-size: 0.75em;
        font-weight: bold;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
        transform: rotate(-1deg);
    }
    
    .threat-cosmic { border-left: 4px solid #8e44ad; }
    .threat-galactic { border-left: 4px solid #e74c3c; }
    .threat-planetary { border-left: 4px solid #f39c12; }
    .threat-global { border-left: 4px solid #27ae60; }
    .threat-universal { border-left: 4px solid #3498db; }
    .threat-multiversal { border-left: 4px solid #9b59b6; }
    
    .hero-icon {
        font-size: 1.5em;
        margin-right: 8px;
        filter: drop-shadow(2px 2px 4px rgba(0,0,0,0.2));
    }
    
    .weakness-warning {
        background: rgba(231, 76, 60, 0.1);
        border-left: 3px solid #e74c3c;
        padding: 8px 12px;
        border-radius: 5px;
        margin-top: 10px;
    }
</style>

<div class="superhero-card 
    @try 
    { 
        @($"threat-{Model.threat_level.ToString().ToLower()}")
    } 
    catch 
    { 
        <text>threat-unknown</text> 
    }">
    
    <div class="d-flex justify-content-between align-items-start mb-3">
        <h5 class="mb-0">
            <span class="hero-icon">?????</span>
            @try
            {
                @Model.codename
            }
            catch
            {
                <text>Unknown Hero</text>
            }
        </h5>
        
        <span class="badge bg-dark">
            @try
            {
                @Model.threat_level
            }
            catch
            {
                <text>Unknown</text>
            }
        </span>
    </div>

    <div class="row">
        <div class="col-md-8">
            <p class="mb-2">
                <strong>?? Real Identity:</strong>
                @try
                {
                    @Model.real_name
                }
                catch
                {
                    <text>Classified</text>
                }
            </p>

            <p class="mb-2">
                <strong>?? Base:</strong>
                @try
                {
                    @Model.base_location
                }
                catch
                {
                    <text>Unknown Location</text>
                }
            </p>

            @try
            {
                if (((object)Model.team) != null)
                {
                    <p class="mb-2">
                        <strong>?? Team:</strong> @Model.team
                    </p>
                }
            }
            catch { }

            @try
            {
                if (((object)Model.first_appearance) != null)
                {
                    <p class="mb-2">
                        <strong>?? First Appearance:</strong> @Model.first_appearance
                    </p>
                }
            }
            catch { }
        </div>
        
        <div class="col-md-4 text-end">
            @try
            {
                if (((object)Model.favorite_food) != null)
                {
                    <p class="mb-1"><small>?? Favorite Food:</small></p>
                    <p class="mb-2"><strong>@Model.favorite_food</strong></p>
                }
            }
            catch { }
        </div>
    </div>

    <!-- Powers Section -->
    <div class="mb-3">
        <p class="mb-2"><strong>? Powers:</strong></p>
        <div>
            @try
            {
                @if (Model.powers != null)
                {
                    @foreach (var power in Model.powers)
                    {
                        <span class="power-badge">@power</span>
                    }
                }
                else if (Model.primary_power != null)
                {
                    <span class="power-badge">@Model.primary_power</span>
                }
                else
                {
                    <span class="power-badge">Powers Classified</span>
                }
            }
            catch
            {
                <span class="power-badge">Powers Data Unavailable</span>
            }
        </div>
    </div>

    <!-- Origin Story -->
    @try
    {
        if (((object)Model.origin_story) != null)
        {
            <div class="mb-3">
                <p class="mb-1"><strong>?? Origin Story:</strong></p>
                <small class="text-muted fst-italic">@Model.origin_story</small>
            </div>
        }
    }
    catch { }

    <!-- Weakness Warning -->
    @try
    {
        if (((object)Model.weakness) != null)
        {
            <div class="weakness-warning">
                <small><strong>?? Weakness:</strong> @Model.weakness</small>
            </div>
        }
    }
    catch { }

    <!-- Hero ID Footer -->
    @try
    {
        if (((object)Model.id) != null)
        {
            <div class="text-end mt-3">
                <small class="text-muted">ID: @Model.id</small>
            </div>
        }
    }
    catch { }
</div>